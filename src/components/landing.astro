---
import { Image } from "astro:assets";
import logo from "assets/japodium.svg";
import background from "assets/japodium-bg.png";
import Download from "./download.tsx";
---

<main
  class="mx-auto bg-background w-full h-[100vh] m-0 relative overflow-hidden">
  <Image
    src={background}
    alt="Japodium"
    class="absolute object-contain z-30 top-0 -right-1/3 lg:right-0 h-full w-auto opacity-10"
    loading="eager"
  />
  <div class="flex flex-col h-full w-full items-center justify-evenly px-4">
    <div class="flex flex-1 items-end">
      <Image
        src={logo}
        alt="Japodium"
        widths={[200, 400, 600]}
        sizes="(max-width: 800px) 100vw, 620px"
        loading="eager"
      />
    </div>
    <Download client:load />
    <div class="w-full justify-self-end text-center my-4 z-50">
      <div class="w-full justify-self-end text-center mt-16 my-4">
        <a
          href="/"
          class="text-center text-sm text-gray underline hover:text-gray-light active:text-gray-light"
          >Homepage</a
        >
        <p class="text-center text-sm text-gray mt-2">
          <a href="/privacy" class="text-center text-sm text-gray underline hover:text-gray-light active:text-gray-light">Privacy</a>
        </p>
        <p class="text-center text-sm text-gray mt-2">
          <a href="/terms" class="text-center text-sm text-gray underline hover:text-gray-light active:text-gray-light">Terms of Service</a>
        </p>
        <p class="text-center text-sm text-gray mt-2">
          Copyright Â© {new Date().getFullYear()} Japodium. All rights reserved.
        </p>
      </div>
    </div>
  </div>
</main>
